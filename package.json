{
  "name": "apocalypse-bench",
  "version": "1.0.0",
  "description": "apocbench: offline survival/apocalypse LLM benchmark runner",
  "private": true,
  "type": "module",
  "bin": {
    "apocbench": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsup",
    "compile:dataset": "tsx src/cli/compileDataset.ts",
    "dev": "tsx src/cli/index.tsx",
    "lint": "eslint src test",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "scripts/check-no-next-artifacts.sh && vitest",
    "verify:install": "pnpm install --frozen-lockfile"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@ai-sdk/provider-utils": "^3.0.19",
    "@openrouter/ai-sdk-provider": "^1.5.4",
    "@stricli/core": "^1.2.4",
    "ai": "^5.0.116",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "ink": "^6.5.1",
    "ollama-ai-provider-v2": "^1.5.5",
    "p-queue": "^9.0.1",
    "pino": "^10.1.0",
    "react": "^19.2.3",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@ai-sdk/provider": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  }
